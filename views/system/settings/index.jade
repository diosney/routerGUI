extends ../../layouts/layout

block navigation
	include ../../layouts/navigation

block content
	header
		.container
			h3 Settings
			span(class="lead") Tell something interesting about the settings screen.

	.container
		.row-fluid
			.span12
				#message-dashboard
					- if (typeof(msg) != 'undefined' && msg.message) {
						.alert.alert-error
							a.close(href="#",data-dismiss="alert") ×
							strong.
								Error!&nbsp;
							span.msg-mark.
								#{msg.message}
					- }
		.row-fluid
			.span12
				ul.nav.nav-tabs
					li.active
						a(href='#basic-setup',data-toggle='tab') Basic Setup
				.tab-content
					.tab-pane.active#basic-setup
						form.ajax-form.form-horizontal(action='/api/system/settings',method='POST')
							table.table.table-striped.table-hover
								tbody
									tr
										th
											label(for='hostname') Hostname
										td
											label
												input(type='text',id='hostname',name='hostname',value='#{settings.hostname}',placeholder="Hostname")
												br
												span.field-description Put brief description here.
									tr
										th
											label(for='domain') Domain
										td
											label
												input(type='text',id='domain',name='domain',value='#{settings.domain}',placeholder="Domain")
												br
												span.field-description Put brief description here.
									tr
										th
											label(for='nameserver-primary') DNS Servers
										td
											label
												input(type='text',id='nameserver-primary',name='nameserver_primary',value='#{settings.nameserver_primary}',placeholder="Primary Nameserver")
												br
												span.field-description Put brief description here.
											label
												input(type='text',id='nameserver-secondary',name='nameserver_secondary',value='#{settings.nameserver_secondary}',placeholder="Secondary Nameserver")
												br
												span.field-description Put brief description here.
									tr
										th
										td
											button.btn.btn-danger(type='submit',name='submit')
												i.icon-cog.icon-white
												| &nbsp;Save Settings
											img.ajax-loader(src='/images/ajax-loader-light.gif')

block footer
	include ../../layouts/footer

block scripts
	script(type='text/javascript', src='/javascripts/external/form/jquery.form.js')
	script(type='text/javascript', src='/javascripts/ui/system/settings.js')

block templates
	#templates-container.hidden
		.alert.alert-error
			a.close(href="#",data-dismiss="alert") ×
			strong.
				Error!&nbsp;
			span.msg-mark
		.alert.alert-success
			a.close(href="#",data-dismiss="alert") ×
			span.msg-mark